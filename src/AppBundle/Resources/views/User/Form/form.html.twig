{% spaceless %}

    {% block javascripts %}

        <script type="text/javascript">
            $(document).ready(function() {

                $(document).on('click', 'input#{{ formEntity.isAuto.vars.id }}', function() {

                    if ($(this).is(':checked')) {
                        $('.is_auto').slideDown();
                    } else {
                        $('.is_auto').slideUp();
                    }


                    // $(function() { $("[data-widget='collapse']").click(); })
                });

            });
        </script>

    {% endblock %}

    {% if id is defined %}
        <input type="hidden" value="{{ id }}" name="id">
    {% endif %}

    {{ form_widget(formEntity._token) }}

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-qrcode"></i>
                {{ form_label(formEntity.code) }}
                {{ form_widget(formEntity.code) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(formEntity.profile) }}
                {{ form_widget(formEntity.profile) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(formEntity.name) }}
                {{ form_widget(formEntity.name) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(formEntity.lastName) }}
                {{ form_widget(formEntity.lastName) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-envelope-o"></i>
                {{ form_label(formEntity.email) }}
                {{ form_widget(formEntity.email) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-phone"></i>
                {{ form_label(formEntity.phone) }}
                {{ form_widget(formEntity.phone) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-calendar"></i>
                {{ form_label(formEntity.dob) }}
                {{ form_widget(formEntity.dob) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(formEntity.dni) }}
                {{ form_widget(formEntity.dni) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        <i class="fa fa-fw fa-image"></i>
        {{ form_label(formEntity.image) }}
        {{ form_widget(formEntity.image) }}
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-car"></i>

                {{ form_label(formEntity.isAuto) }}
                <label class="switch">
                    {{ form_widget(formEntity.isAuto) }}
                    <span class="slider round bg-red-slider"></span>
                </label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group is_auto" style="display: {{ formEntity.isAuto.vars.data ? 'block' : 'none' }}">
                <i class="fa fa-fw fa-keyboard-o"></i>
                {{ form_label(formEntity.plate) }}
                {{ form_widget(formEntity.plate) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group is_auto" style="display: {{ formEntity.isAuto.vars.data ? 'block' : 'none' }}">
                <i class="fa fa-fw fa-puzzle-piece"></i>
                {{ form_label(formEntity.color) }}
                {{ form_widget(formEntity.color) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group is_auto" style="display: {{ formEntity.isAuto.vars.data ? 'block' : 'none' }}">
                <i class="fa fa-fw fa-subway"></i>
                {{ form_label(formEntity.model) }}
                {{ form_widget(formEntity.model) }}
            </div>
        </div>
    </div>

    {#<div class="form-group">#}
    {#{{ form_label(formEntity.image) }}#}
    {#{{ form_widget(formEntity.image) }}#}
    {#</div>#}
{% endspaceless %}